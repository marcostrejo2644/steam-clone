{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@services/*": ["services/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@routes/*": ["routes/*"],
      "@controllers/*": ["controllers/*"],
      "@resources/*": ["resources/*"],
      "@apis/*": ["apis/*"],
      "@models/*": ["models/*"],
      "@core/*": ["core/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "noImplicitAny": true,
  },
  "include": ["./src/**/*.ts", "./src/__tests__/**/*.ts"],
  "exclude": ["node_modules", ".vscode", "build", "dist"]
}
