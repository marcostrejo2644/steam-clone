{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@services/*": ["services/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@routes/*": ["routes/*"],
      "@controllers/*": ["controllers/*"],
      "@resources/*": ["resources/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "noImplicitAny": true,
    "noImplicitAny": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
